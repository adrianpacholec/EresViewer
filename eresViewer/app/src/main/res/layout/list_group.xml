<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/markName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingBottom="15dp"
            android:paddingLeft="40dp"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="Kolokwium 1" />

        <TextView
            android:id="@+id/myMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="15sp"
            tools:text="5.0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lowerMark"
                style="@style/regularSpreadItemsInRow" />

            <TextView
                android:id="@+id/averageMark"
                style="@style/regularSpreadItemsInRow" />

            <TextView
                android:id="@+id/higherMark"
                style="@style/regularSpreadItemsInRow" />

            <TextView
                android:id="@+id/amountOfMarks"
                style="@style/regularSpreadItemsInRow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/minLdabel"
                style="@style/regularSpreadItemsInRow"
                android:text="@string/topbar_lower" />

            <TextView
                android:id="@+id/averageLdabel"
                style="@style/regularSpreadItemsInRow"
                android:text="@string/topbar_average" />

            <TextView
                android:id="@+id/higherLdabel"
                style="@style/regularSpreadItemsInRow"
                android:text="@string/topbar_higher" />

            <TextView
                android:id="@+id/amountLdabel"
                style="@style/regularSpreadItemsInRow"
                android:text="@string/topbar_amount" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

